{
  "name": ".NET Development with SQL Server",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  
  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime",
        "ms-mssql.mssql"
      ],
      "settings": {
        "dotnet.defaultSolution": "BlazorApp02/BlazorApp02.sln"
      }
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally
  "forwardPorts": [5000, 5001, 1433],

  // Use 'postCreateCommand' to run commands after the container is created
  "postCreateCommand": "bash -c 'curl -sSL https://dot.net/v1/dotnet-install.sh | bash /dev/stdin --channel 10.0 --install-dir /usr/share/dotnet && dotnet restore BlazorApp02/BlazorApp02.sln'"
}
